@model SastreriaWebApp.Models.OrderCreateViewModel


@{
    ViewData["Title"] = "Crear: Orden de servicio";
}



<h4>Crear: Orden de Servicio</h4>
<hr />

<div class="container">

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-6">
                <div class="form-group form-inline mb-2">

                    <label asp-for="Tel" class="control-label col-sm-2">Telefono:</label>
                    <div class="col-lg-8">
                        <input asp-for="Tel" class="form-control" id="clientTel" />
                    </div>
                    <span asp-validation-for="Tel" class="text-danger"></span>
                </div>

                <div class="form-group form-inline mb-2">
                    <label asp-for="Name" class="control-label col-sm-2">Nombre:</label>
                    <input type="hidden" asp-for="ClientId" class="form-control" id="clientId" />
                    <div class="col-lg-8">
                        <input asp-for="Name" class="form-control" id="clientName" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Address" class="control-label col-sm-2">Direccion:</label>
                    <div class="col-lg-8">
                        <textarea asp-for="Address" class="form-control" id="clientAddress"> </textarea>
                    </div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <div class="col-6">
                <div class="form-group form-inline mb-2">
                    <label asp-for="DeliveryDate" class="control-label col-sm-2">Entrega:</label>
                    <div class="col-lg-8">
                        <input asp-for="DeliveryDate" class="form-control id=" DeliveryDate"" type="date" />
                    </div>
                    <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                </div>

                <div class="form-group form-inline mb-2">
                    <label asp-for="Cost" class="control-label col-sm-2">Costo:</label>
                    <div class="col-lg-8">
                        <input asp-for="Cost" class="form-control" type="number" />
                    </div>
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>

                <div class="form-group form-inline mb-2">
                    <label asp-for="Amount " class="control-label col-sm-2">Abono:</label>

                    <div class="col-lg-8">
                        <input asp-for="Amount" class="form-control" type="number" />
                    </div>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Details" class="control-label">Detalles</label>

            <textarea asp-for="Details" class="form-control"> </textarea>
            <span asp-validation-for="Details" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Complete" /> @Html.DisplayNameFor(model => model.Complete)
            </label>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </form>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
